{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/main",
        "destination": "/main_page.html"
      },
      {
        "source": "/emailsignup",
        "destination": "/sign_up_page.html"
      },
      {
        "source": "/account/**",
        "destination": "/show_account.html"
      },{
        "source": "/post/**",
        "destination": "/show_post.html"
      },{
        "source": "/policy",
	"destination": "/policy.html"
      },{
        "source": "/terms_and_conditions",
	"destination": "/terms.html"
      }
    ]
  }
}
